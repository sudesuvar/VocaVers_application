<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".login_page">

    <TextView
        android:id="@+id/CreateLittleTitletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Sign in to continue"
        android:textColor="@color/offWhite"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/CreateTitletextView"
        android:layout_width="174dp"
        android:layout_height="96dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="@color/offWhite"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/loginsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup!"
        android:textColor="@color/material_dynamic_neutral40"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="554dp" />

    <TextView
        android:id="@+id/loginforgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="@color/material_dynamic_neutral40"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="515dp" />

    <Button
        android:id="@+id/Createbutton"
        android:layout_width="255dp"
        android:layout_height="47dp"
        android:background="@drawable/edittextbackground"
        android:fontFamily="@font/alata"
        android:text="log Ä±n "
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="432dp" />

    <EditText
        android:id="@+id/CreatePasswordEditText"
        android:layout_width="255dp"
        android:layout_height="0dp"
        android:background="@drawable/edittextbackground"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral20"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="343dp" />

    <EditText
        android:id="@+id/CreateNameEdittext"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:background="@drawable/edittextbackground"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="User Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral20"
        android:textColorHint="@color/material_dynamic_neutral20"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/CreatePasswordtext"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:fontFamily="@font/alata"
        android:text="PASSWORD"
        android:textColor="@color/material_dynamic_neutral50"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="287dp" />

    <TextView
        android:id="@+id/CreateNametext"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:fontFamily="@font/alata"
        android:text="NAME"
        android:textColor="@color/material_dynamic_neutral40"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="176dp" />

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>

